{
  "name": "spiris-client",
  "version": "1.0.0",
  "description": "TypeScript client for Visma eAccounting API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "spiris",
    "bokforing",
    "accounting",
    "api",
    "client",
    "typescript",
    "invoicing",
    "bookkeeping",
    "sweden"
  ],
  "author": "Spiris BokfÃ¶ring Client Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmystridh/spiris-client.git"
  },
  "homepage": "https://github.com/jimmystridh/spiris-client#readme",
  "bugs": {
    "url": "https://github.com/jimmystridh/spiris-client/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
